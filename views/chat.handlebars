<div id="quack-chat">
  <h2 id="chat-title">Quack Chat</h2>
  <div id="chat-window">
    <div id="chat-output">
      {{#each logs}}
        <p><b>{{this.username}}:</b> {{this.message}} <span class="timestamp"> | {{this.timestamp}}</span></p>
      {{/each}}
    </div>
  </div>
  <form id="chat-form">
    <input name="message" type="text" id="message" placeholder="Type a message..."/>
    <button type="submit" id="chat-send">
      <i class="far fa-paper-plane"></i>
    </button>
  </form>
  <div id="error-display">
    <span id="error-symbol">
      <i class="fas fa-exclamation-triangle"></i>
    </span> 
    <span id="error-message"></span>
    <button id="error-dismiss">
      &#10005;
    </button>
  </div>
</div>
