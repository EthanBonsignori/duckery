      <canvas id="canvas1" width="400" height="400"></canvas>

      <div class="custommenus">
        <h4>Head</h4>
          <div class="row text-center">
            <div class="colormenu border border-primary col-md-4">
                <input type="color" id="head_color"
                  value="#ffff00">
                <label for="color"><h4>Color</h4></label>
            </div>

            <div class="gradientmenu border border-primary col-md-4">
              <btn class="btn btn-warning btn-lg mb-2" id="grad_head">Apply Gradient</btn>
